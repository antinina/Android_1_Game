<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Ovo je naslov-->
    <TextView
        android:id="@+id/game_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="~ 4 U NIZU ~"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:fontFamily="serif-monospace"
        android:textSize="35dp"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/verticalLayout1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_margin="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/game_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalLayout2"
        app:layout_constraintBottom_toBottomOf="@+id/verticalLayout2"
        >


    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"


        android:text="Username:"
        android:textSize="16dp"





         />

    <TextView
        android:id="@+id/tvIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"

        android:text="IP:"
        android:textSize="16dp"



        />

    <TextView
        android:id="@+id/tvPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="130dp"
        android:text="Port:"
        android:textSize="16dp"

 />

    <TextView
        android:id="@+id/tvPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Igraci:"

        android:textSize="16dp"



        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_margin="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/game_name"

        app:layout_constraintStart_toEndOf="@+id/verticalLayout1"
        app:layout_constraintEnd_toEndOf="parent"






        >
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="username"
        android:inputType="text"
        android:text=""


        />


        <EditText
            android:id="@+id/etIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"


            android:ems="10"

            android:inputType="text"

            android:text=""

            />

        <EditText
            android:id="@+id/etPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"


            android:ems="10"

            android:hint="greater than 1023"
            android:inputType="text"
            android:text=""
            />


        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Konektuj se"



            />

        <Spinner
        android:id="@+id/spAvailablePlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="50dp"


         />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapocni igru"

        android:layout_marginTop="15dp"

        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>